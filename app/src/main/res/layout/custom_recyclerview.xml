<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@string/not_found"
        android:id="@+id/image_hero"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height250dp"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/name_hero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:padding="@dimen/padding15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height20dp"
        android:background="@drawable/line"
        android:layout_gravity="bottom"/>
</FrameLayout>